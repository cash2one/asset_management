        <record model="ir.ui.view" id="asset_storage_form_view">
            <field name="name">equipment_storage.form</field>
            <field name="model" >asset_management.equipment_storage</field>
            <field name="arch" type="xml">
                <form string="equipment_storage Form" create="false">
                     <header>
                    </header>

                    <group>
                        <group>
                            <field name="storage_id" string = "入库单号"/>
                        </group>
                        <group>
                           <field name="user_id" string="申请人" edit="true"/>
                        </group>

                    </group>
                    <group>
                        <field name="SN" string = "设备" mode="tree"/>
                    </group>
                </form>
            </field>
         </record>
